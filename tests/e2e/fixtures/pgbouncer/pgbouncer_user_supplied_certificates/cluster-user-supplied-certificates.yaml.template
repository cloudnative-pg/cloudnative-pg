apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: cluster-user-supplied-certificates
spec:
  instances: 2

  postgresql:
    parameters:
      work_mem: "8MB"
      log_checkpoints: "on"
      log_lock_waits: "on"
      log_min_duration_statement: '1000'
      log_statement: 'ddl'
      log_temp_files: '1024'
      log_autovacuum_min_duration: '1s'
      log_replication_commands: 'on'

  certificates:
    serverTLSSecret: pg-server-cert
    serverCASecret: pg-server-ca
    clientCASecret: pg-client-ca
    replicationTLSSecret: pg-client-streaming-replica

  managed:
    roles:
      - name: pgbouncer
        login: true

  bootstrap:
    initdb:
      database: app
      owner: app
      postInitSQL:
        - |
          CREATE OR REPLACE FUNCTION public.user_search(uname TEXT)
          RETURNS TABLE (usename name, passwd text)
          LANGUAGE sql SECURITY DEFINER AS
          'SELECT usename, passwd FROM pg_catalog.pg_shadow WHERE usename=$1;'
        - CREATE ROLE pgbouncer
        - GRANT EXECUTE ON FUNCTION public.user_search(text) TO pgbouncer

  # Persistent storage configuration
  storage:
    storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    size: 1Gi
