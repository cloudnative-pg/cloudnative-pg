apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: volume-snapshot
spec:
  instances: 3

  bootstrap:
    initdb:
      database: app
      owner: app

  # Persistent storage configuration
  storage:
    storageClass: ${E2E_CSI_STORAGE_CLASS}
    size: 1Gi
  walStorage:
    storageClass: ${E2E_CSI_STORAGE_CLASS}
    size: 1Gi