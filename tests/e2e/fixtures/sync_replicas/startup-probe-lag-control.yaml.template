apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: cluster-startup-probe-replica-lag-control
spec:
  instances: 3

  postgresql:
    synchronous:
      method: any
      number: 2
      dataDurability: preferred
    parameters:
      log_checkpoints: "on"
      log_lock_waits: "on"
      log_min_duration_statement: '1000'
      log_statement: 'ddl'
      log_temp_files: '1024'
      log_autovacuum_min_duration: '1s'
      log_replication_commands: 'on'

  probes:
    startup:
      type: streaming
      maximumLag: 16Mi
      # High failureThreshold to prevent container restarts during WAL catch-up.
      # On cloud environments with variable I/O, catching up ~400-500MB of WAL
      # can take longer than 60 seconds. Container restarts would cause log loss,
      # making it impossible to verify that the probe correctly detected lag.
      failureThreshold: 600
      periodSeconds: 1
    readiness:
      failureThreshold: 10
      periodSeconds: 1

  storage:
    storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    size: 3Gi
