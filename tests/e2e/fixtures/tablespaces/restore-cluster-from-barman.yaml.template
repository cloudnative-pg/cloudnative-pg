apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: cluster-restore-with-tablespaces
spec:
  instances: 2

  storage:
    size: 1Gi

  bootstrap:
    recovery:
      backup:
        name: ${BARMAN_BACKUP_NAME}

  tablespaces:
    atablespace:
      storage:
        size: 1Gi
        storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    anothertablespace:
      storage:
        size: 2Gi
        storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    thirdtablespace:
      storage:
        size: 1Gi
        storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
