apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: cluster-example-with-tablespaces
spec:
  instances: 2

  storage:
    size: 1Gi
    storageClass: ${E2E_DEFAULT_STORAGE_CLASS}

  tablespaces:
    atablespace:
      storage:
        size: 1Gi
        storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    anothertablespace:
      storage:
        size: 2Gi
        storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
