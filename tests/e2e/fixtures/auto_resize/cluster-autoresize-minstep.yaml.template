apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: cluster-autoresize-minstep
spec:
  instances: 1

  postgresql:
    parameters:
      log_checkpoints: "on"

  primaryUpdateStrategy: unsupervised
  primaryUpdateMethod: switchover

  bootstrap:
    initdb:
      database: app
      owner: app

  storage:
    storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    size: 2Gi
    resize:
      enabled: true
      triggers:
        usageThreshold: 80
      expansion:
        # 5% of 2Gi = 100Mi (raw calculation)
        step: "5%"
        # But minStep clamps it to at least 1Gi
        minStep: "1Gi"
        limit: "10Gi"
      strategy:
        maxActionsPerDay: 10
        walSafetyPolicy:
          acknowledgeWALRisk: true
