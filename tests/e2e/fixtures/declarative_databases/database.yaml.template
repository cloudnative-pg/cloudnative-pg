apiVersion: postgresql.cnpg.io/v1
kind: Database
metadata:
  name: db-declarative
spec:
  name: declarative
  owner: app
  localeCType: "C.utf8"
  localeCollate: C
  encoding: SQL_ASCII
  template: template0
  cluster:
    name: cluster-with-declarative-databases
  extensions:
