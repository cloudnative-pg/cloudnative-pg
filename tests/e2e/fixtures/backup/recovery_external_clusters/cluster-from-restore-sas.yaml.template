apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: cluster-restored-sas
spec:
  instances: 2

  storage:
    storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    size: 1Gi

  bootstrap:
    recovery:
      source: clusterBackupSas

  externalClusters:
    - name: clusterBackupSas
      barmanObjectStore:
        serverName: pg-backup-azure-blob-sas
        destinationPath: https://${AZURE_STORAGE_ACCOUNT}.blob.core.windows.net/${AZURE_BLOB_CONTAINER}/
        azureCredentials:
          storageAccount:
            name: restore-storage-creds-sas
            key: ID
          storageSasToken:
            name: restore-storage-creds-sas
            key: KEY
