apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: external-cluster-azure
spec:
  instances: 2

  postgresql:
    parameters:
      log_checkpoints: "on"
      log_lock_waits: "on"
      log_min_duration_statement: '1000'
      log_statement: 'ddl'
      log_temp_files: '1024'
      log_autovacuum_min_duration: '1s'

  # Example of rolling update strategy:
  # - unsupervised: automated update of the primary once all
  #                 replicas have been upgraded (default)
  # - supervised: requires manual supervision to perform
  #               the switchover of the primary
  primaryUpdateStrategy: unsupervised

  # Persistent storage configuration
  storage:
    storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    size: 1Gi

  bootstrap:
    recovery:
      database: appdb
      owner: appuser
      secret:
        name: postgresql-user-supplied-app
      # cluster name in source cluster
      source: source-cluster-azure

  externalClusters:
  - name: source-cluster-azure
    barmanObjectStore:
      destinationPath: https://${AZURE_STORAGE_ACCOUNT}.blob.core.windows.net/source-cluster-azure/
      azureCredentials:
        storageAccount:
          name: backup-storage-creds
          key: ID
        storageKey:
          name: backup-storage-creds
          key: KEY
      wal:
        compression: gzip
      data:
        immediateCheckpoint: true
